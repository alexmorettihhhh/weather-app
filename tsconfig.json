{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "Node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react",
    "types": ["vite/client"]
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": ["server/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
